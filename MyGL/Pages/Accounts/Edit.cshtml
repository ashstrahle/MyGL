@page
@model MyGL.Pages.Accounts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account.Id" />
            <div class="form-group">
                <label asp-for="Account.AccountName" class="control-label"></label>
                <input asp-for="Account.AccountName" class="form-control" />
                <span asp-validation-for="Account.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Account.HeaderRow" /> @Html.DisplayNameFor(model => model.Account.HeaderRow)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Account.DateColNo" class="control-label"></label>
                <input asp-for="Account.DateColNo" class="form-control" />
                <span asp-validation-for="Account.DateColNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.DescriptionColNo" class="control-label"></label>
                <input asp-for="Account.DescriptionColNo" class="form-control" />
                <span asp-validation-for="Account.DescriptionColNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.AmountColNo" class="control-label"></label>
                <input asp-for="Account.AmountColNo" class="form-control" />
                <span asp-validation-for="Account.AmountColNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
