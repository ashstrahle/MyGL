@page
@model MyGL.Pages.CategoryConditions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category Condition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" name="referer" Value="@ViewBag.referer" /> <!-- Pass along the desired return page -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryCondition.SearchString" class="control-label"></label>
                <input asp-for="CategoryCondition.SearchString" class="form-control" Value="@ViewBag.SearchString" />
                <span asp-validation-for="CategoryCondition.SearchString" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="CategoryCondition.CategoryId" class="control-label"></label>
                <select asp-for="CategoryCondition.CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option disabled selected>--- SELECT ---</option>
                </select>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Update" />
                    <label asp-for="Update" class="control-label"></label>
                </label>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a href="@ViewBag.referer">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}